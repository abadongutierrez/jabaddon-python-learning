# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Relevance Checker Configuration
# Options: gpt-4o-mini (recommended for cost-efficiency), gpt-4o, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Temperature for relevance checking (0 = deterministic)
OPENAI_TEMPERATURE=0

# Max tokens for classification response (10 is sufficient for one-word answers)
OPENAI_MAX_TOKENS=10

# Research Agent Configuration
# Model for generating detailed answers from documents
# Options: gpt-4o-mini (recommended), gpt-4o (best quality), gpt-3.5-turbo (budget)
RESEARCH_MODEL=gpt-4o-mini

# Temperature for research agent (0.3 = slightly creative but focused)
RESEARCH_TEMPERATURE=0.3

# Max tokens for research responses (300 = detailed answers)
RESEARCH_MAX_TOKENS=300

# Verification Agent Configuration
# Model for verifying answer accuracy against document context
# Options: gpt-4o-mini (recommended), gpt-4o (best accuracy)
VERIFICATION_MODEL=gpt-4o-mini

# Temperature for verification agent (0.0 = deterministic, consistent verification)
VERIFICATION_TEMPERATURE=0.0

# Max tokens for verification reports (200 = structured verification output)
VERIFICATION_MAX_TOKENS=200

# Embedding Configuration (for RetrieverBuilder)
# Model for document embeddings and semantic search
# Options: text-embedding-3-small (recommended, cost-effective), text-embedding-3-large (better quality), text-embedding-ada-002 (legacy)
EMBEDDING_MODEL=text-embedding-3-small

# Retriever Configuration
# Path to ChromaDB vector store
CHROMA_DB_PATH=./chroma_db

# Number of documents to retrieve for vector search
VECTOR_SEARCH_K=5

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRE_DAYS=7
